{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build local",
            "type": "shell",
            "command": "bundler",
            "args": [
                "exec",
                "jekyll",
                "b",
                "--watch",
                "-d",
                "${input:outDir}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "serve",
            "type": "shell",
            "command": "bundler",
            "args": [
                "exec",
                "jekyll",
                "serve",
                "${input:outDir}"
            ],
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "outDir",
            "description": "Where to?",
            "default": "~/"
        },
    ]
}
